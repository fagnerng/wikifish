# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                       controllers.Application.index

#fish
GET         /fish                                   controllers.Application.fishs
GET         /fish/:id                               controllers.Application.getFish(id: long)
POST        /fish                                   controllers.Application.newFish
PUT         /fish/:id                               controllers.Application.updateFish(id: long)

#comments
GET         /fish/:id                               controllers.Application.comments(id: long)
POST        /fish/:id                               controllers.Application.newComments(id: long)
PUT         /fish/:fishId/comment/:commentId        controllers.Application.updateComments(id: fishId, commentId: long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)
